<UserControl x:Class="CNC_QOL_App.NavigationTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CNC_QOL_App"
             mc:Ignorable="d" 
             Name="navigationTabItem"
             d:DesignHeight="50" d:DesignWidth="250">
    <Grid>
        <Button Style="{DynamicResource NavigationRoundedButton}" Content="{Binding Title, ElementName=navigationTabItem}" BorderBrush="#FF474747" Foreground="White" Background="#FF474747" FontFamily="Bahnschrift Light" FontSize="16" HorizontalContentAlignment="Left" BorderThickness="1,1,1,1" Padding="10,5,14,5" Click="Button_Click"/>
    </Grid>
</UserControl>
